{
    "openapi": "3.0.0",
    "info": {
        "title": "API - Sistema de controle de itens",
        "description": "Documentação da API de sistema de controle de itens por departamento usando Swagger",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "API principal"
        }
    ],
    "paths": {
        "/api/departaments": {
            "get": {
                "tags": [
                    "Departamentos"
                ],
                "summary": "Listar todos os departamentos",
                "description": "Retorna uma lista de todos os departamentos cadastrados.",
                "operationId": "getDepartments",
                "responses": {
                    "200": {
                        "description": "Lista de departamentos retornada com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/DepartamentListResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Não autorizado"
                    }
                }
            },
            "post": {
                "tags": [
                    "Departamentos"
                ],
                "summary": "Criar um novo departamento",
                "description": "Cria e retorna um novo departamento.",
                "operationId": "createDepartment",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Departament"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Departamento criado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/DepartamentResponse"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Dados inválidos"
                    }
                }
            }
        },
        "/api/departaments/{id}": {
            "get": {
                "tags": [
                    "Departamentos"
                ],
                "summary": "Buscar departamento por ID",
                "description": "Retorna os dados de um departamento específico pelo ID.",
                "operationId": "getDepartmentById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do departamento",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Departamento encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/DepartamentResponse"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Departamento não encontrado"
                    }
                }
            },
            "put": {
                "tags": [
                    "Departamentos"
                ],
                "summary": "Atualizar um departamento",
                "description": "Atualiza os dados de um departamento existente.",
                "operationId": "updateDepartment",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do departamento",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Departament"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Departamento atualizado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/DepartamentResponse"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Departamento não encontrado"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Departamentos"
                ],
                "summary": "Deletar um departamento",
                "description": "Remove um departamento pelo ID.",
                "operationId": "deleteDepartment",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do departamento",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Departamento deletado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/DefaultSuccessResponse"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Departamento não encontrado"
                    }
                }
            }
        },
        "/api/departaments/{id}/items": {
            "get": {
                "tags": [
                    "Departamentos"
                ],
                "summary": "Listar itens de um departamento",
                "description": "Retorna todos os itens vinculados a um departamento específico.",
                "operationId": "getDepartamentItems",
                "parameters": [
                    {
                        "name": "departament",
                        "in": "path",
                        "description": "ID do departamento",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de itens retornada com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Lista de itens do departamento retornada com sucesso"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Item"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Departamento não encontrado"
                    }
                }
            }
        },
        "/api/items": {
            "get": {
                "tags": [
                    "Items"
                ],
                "summary": "Listar todos os itens",
                "description": "Retorna uma lista de todos os itens cadastrados.",
                "operationId": "getItems",
                "responses": {
                    "200": {
                        "description": "Lista de itens retornada com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Lista de itens retornada com sucesso"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Item"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Não autorizado"
                    }
                }
            },
            "post": {
                "tags": [
                    "Items"
                ],
                "summary": "Criar um novo item",
                "description": "Cria e retorna um novo item.",
                "operationId": "createItem",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {},
                            "example": {
                                "name": "Item de Escritório",
                                "description": "Caneta azul esferográfica",
                                "departament_id": 1,
                                "quantity": 10,
                                "active": true
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Item criado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ItemResponse"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Dados inválidos"
                    }
                }
            }
        },
        "/api/items/{id}": {
            "get": {
                "tags": [
                    "Items"
                ],
                "summary": "Buscar item por ID",
                "description": "Retorna os dados de um item específico pelo ID.",
                "operationId": "getItemById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do item",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Item encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ItemResponse"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Item não encontrado"
                    }
                }
            },
            "put": {
                "tags": [
                    "Items"
                ],
                "summary": "Atualizar um item",
                "description": "Atualiza os dados de um item existente.",
                "operationId": "updateItem",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do item",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Item"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Item atualizado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ItemResponse"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Item não encontrado"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Items"
                ],
                "summary": "Deletar um item",
                "description": "Remove um item pelo ID.",
                "operationId": "deleteItem",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do item",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Item deletado com sucesso"
                    },
                    "404": {
                        "description": "Item não encontrado"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Departament": {
                "title": "Departamento",
                "required": [
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Financeiro"
                    },
                    "description": {
                        "type": "string",
                        "example": "Responsável pelas finanças da empresa"
                    },
                    "active": {
                        "type": "boolean",
                        "example": null,
                        "nullable": true
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-08-03T12:00:00Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-08-03T12:30:00Z"
                    }
                },
                "type": "object"
            },
            "DepartamentResponse": {
                "properties": {
                    "status": {
                        "type": "string",
                        "example": "success"
                    },
                    "message": {
                        "type": "string",
                        "example": "Departamento criado com sucesso"
                    },
                    "data": {
                        "$ref": "#/components/schemas/Departament"
                    }
                },
                "type": "object"
            },
            "DepartamentListResponse": {
                "properties": {
                    "status": {
                        "type": "string",
                        "example": "success"
                    },
                    "message": {
                        "type": "string",
                        "example": "Lista de departamentos retornada com sucesso"
                    },
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Departament"
                        }
                    }
                },
                "type": "object"
            },
            "DefaultSuccessResponse": {
                "properties": {
                    "status": {
                        "type": "string",
                        "example": "success"
                    },
                    "message": {
                        "type": "string",
                        "example": "Operação realizada com sucesso"
                    },
                    "data": {
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "Item": {
                "title": "Item",
                "required": [
                    "name",
                    "departament_id",
                    "quantity"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Item de Escritório"
                    },
                    "description": {
                        "type": "string",
                        "example": "Caneta esferográfica azul"
                    },
                    "departament_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "quantity": {
                        "type": "integer",
                        "example": 50
                    },
                    "active": {
                        "type": "boolean",
                        "example": true
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-08-03T12:00:00Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-08-03T12:30:00Z"
                    }
                },
                "type": "object"
            },
            "ItemResponse": {
                "properties": {
                    "status": {
                        "type": "string",
                        "example": "success"
                    },
                    "message": {
                        "type": "string",
                        "example": "Item criado com sucesso"
                    },
                    "data": {
                        "$ref": "#/components/schemas/Item"
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "Departamentos",
            "description": "Endpoints de gerenciamento de departamento"
        },
        {
            "name": "Items",
            "description": "Endpoints de gerenciamento de itens"
        }
    ]
}